{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue",
		"^uni-(.*)": "@/components/common/uni-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/common/index",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/common/mine/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}, {
			"path": "pages/common/good/index",
			"style": {
				"navigationBarTitleText": ""
			}
		}, {
			"path": "pages/common/login/login",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		},{
			"path": "pages/user/order/order",
			"style": {
				"navigationBarTitleText": "订单",
				"enablePullDownRefresh": false
			}

		}
	    ,{
            "path" : "pages/common/login/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "注册",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#919293",
		"selectedColor": "#97AF13",
		"backgroundColor": "#fff",
		"borderStyle": "black",
		"list": [
			// 公告模块
			{
				"pagePath": "pages/common/mine/index",
				"text": "我的"
			},{
				"pagePath": "pages/common/good/index",
				"text": "商品"
			},
			
			// 用户模块
			
			{
				"pagePath": "pages/user/order/order",
				"text": "订单",
				"iconPath": "static/images/tabBar/drink.png",
				"selectedIconPath": "static/images/tabBar/drink_selected.png"
			}
			
			
			// 管理员
			
		]
	}
}
